PROGRAM recur;
  PROCEDURE r(y : INTEGER) : INTEGER;
  BEGIN
    IF y = 0 THEN
      y := -1001
    ELSE
      y := r(y - 1)
    END;
    RETURN y
  END r;

  PROCEDURE a(x : INTEGER) : INTEGER;
  BEGIN
    IF x < 0 THEN
      x := -888
    ELSE
      x := b(x - 2)
    END;
    RETURN x
  END a;

  PROCEDURE b(x : INTEGER) : INTEGER;
  BEGIN
    IF x < 0 THEN
      x := -777
    ELSE
      x := a(x - 1)
    END;
    RETURN x
  END b;
BEGIN
  WRITE r(10);
  WRITE a(99)
END recur.
